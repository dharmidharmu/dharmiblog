<div class="container d-flex justify-content-center align-items-center mt-3 mb-3">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-8 offset-xl-2 ">
            <div class="card shadow">
               
                <div class="card-body">
                    <h5 class="card-title">Details</h5>
                    <form action="/userdetails" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Name</label>
                            <input class="form-control" type="text" id="name" name="details[name]" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                          </div>
<!-- //job -->
<div class="mb-3">
<label class="form-label" for="username">Job </label>
<select class="form-select" aria-label="Default select example" name="details[job]" required>
 <option value="">Select</option>
  <option value="Employee">Employee</option>
  <option value="Student">Student</option>
  <option value="Others">Others</option>
</select>
</div>
<!-- job end -->
<!-- gender -->
<div class="form-check form-check-inline mb-3">
  <input
    class="form-check-input"
    type="radio"
    name="details[gender]"
    id="inlineRadio1"
    value="Male",
		 required
		 
  />
  <label class="form-check-label" for="inlineRadio1">Male</label>
</div>
<div class="form-check form-check-inline">
  <input
    class="form-check-input"
    type="radio"
    name="details[gender]"
    id="inlineRadio2"
    value="Female"
  />
  <label class="form-check-label" for="inlineRadio2">Female</label>
</div>
<div class="form-check form-check-inline">
  <input
    class="form-check-input"
    type="radio"
    name="details[gender]"
    id="Others"
    value="Others"
  />
  <label class="form-check-label" for="inlineRadio2">Others</label>
</div>
<!-- gender end -->
<!-- birthday -->
<div class="mb-3">
 <label class="form-label" for="username">DOB</label>
   <input class="form-control" type="date" id="dob" name="details[dob]" required autofocus>
    <div class="valid-feedback">
         Looks good!
    </div>
</div>
						<!-- birthday end -->
<div class="card-body">
    <button class="card-link btn btn-success float-right" >Add</button>
</div>
                        </form>
</div>
            </div>
        </div>
    </div>
</div>